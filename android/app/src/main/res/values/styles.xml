<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="colorControlActivated">#fff</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#33000000</item>
        <item name="android:textColorPrimary">#000</item>
    </style>
    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#284784</item>
        <item name="android:textColorPrimary">#284784</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
